# Django Configuration
# SECURITY: Change these values in production!

# Required: Generate a secure secret key (e.g., using: python -c "import secrets; print(secrets.token_urlsafe(50))")
DJANGO_SECRET_KEY=your-secret-key-change-in-production

# SECURITY: Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# API Keys
API_KEY=your-gemini-api-key

# Database Configuration (PostgreSQL)
# SECURITY: Use strong passwords in production!
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=CHANGE-THIS-PASSWORD-IN-PRODUCTION
DB_HOST=localhost
DB_PORT=5432

# Optional: For SQLite (development only)
# DATABASE_URL=sqlite:///db.sqlite3

# Security settings (production)
# SECURE_SSL_REDIRECT=True
